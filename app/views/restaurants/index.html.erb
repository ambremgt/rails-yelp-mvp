<h1>My restaurants</h1>

<div class="container">
  <% @restaurants.each do |restaurant| %>
    <p><%= link_to restaurant.name, restaurant_path(restaurant) %><%= restaurant.address %><%= restaurant.phone_number %><%= restaurant.category %></p>
  <% end %>
  <p><%= link_to "Add a new restaurant", new_restaurant_path %></p>
</div>
